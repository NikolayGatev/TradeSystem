@model IndividualDataClentFormModel
@inject IClientService clientService

@{
    ViewData["Title"] = "Individual client";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="FirstName...">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName"></label>
                <input asp-for="SecondName" class="form-control" placeholder="SecondName...">
                <span asp-validation-for="SecondName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" placeholder="Surname...">
                <span asp-validation-for="Surname" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NationalityId"></label>
                <select asp-for="NationalityId" class="form-control">
                    @foreach (var nationality in Model.Nationalities)
                    {
                        <option value="@nationality.Id">@nationality.Name</option>
                    }
                </select>
                <span asp-validation-for="NationalityId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Town"></label>
                <input asp-for="Town" class="form-control" placeholder="Town...">
                <span asp-validation-for="Town" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" placeholder="district/ str./ number/ floor/ flat...">
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+359888888888">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" class="form-control" placeholder="M.d.yyyy...">
                <span asp-validation-for="DateOfBirth" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NationalIdentityNumber"></label>
                <input asp-for="NationalIdentityNumber" class="form-control" placeholder="National Identity Number...">
                <span asp-validation-for="NationalIdentityNumber" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Upload" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

