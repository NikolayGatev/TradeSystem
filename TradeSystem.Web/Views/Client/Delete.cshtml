@model DataOfClientServiceModel

@{
    ViewBag.Title = "Delete your data";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            @if (Model.FirstName != null)
            {
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" disabled="disabled" />
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" disabled="disabled" />
                </div>
                <div class="form-group">
                    <label asp-for="NationalIdentityNumberIndividual" class="control-label"></label>
                    <input asp-for="NationalIdentityNumberIndividual" class="form-control" disabled="disabled" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" disabled="disabled" />
                </div>

                <div class="form-group">
                    <label asp-for="NationalIdentityNumber" class="control-label"></label>
                    <input asp-for="NationalIdentityNumber" class="form-control" disabled="disabled" />
                </div>
            }
            <div class="form-group">
                <input asp-route-dataId="@Model.Id" type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
