@model ClientAcountServiceModel
@inject IClientService clientService

@{
    ViewBag.Title = "Acount Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="card col-8 border-0">
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <p>@Model.Balance</p>
            </div>
            <div class="form-group">
                <label asp-for="BlockedSum" class="control-label"></label>
                <p>@Model.BlockedSum</p>
            </div>
            <div class="form-group">
                <label asp-for="AllAmountDeposited" class="control-label"></label>
                <p>@Model.AllAmountDeposited</p>
            </div>

            @if (await clientService.ExistClientByUserIdAsync(User.Id()))
            {
                <a class="ml-2 btn btn-danger" asp-controller="Deposit" asp-action="Add"
                   asp-route-orderId="@User.Id()">Add Money</a>
            }
        </div>
    </div>
</div>
