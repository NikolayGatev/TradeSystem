@model ClientAddMoneyModel

@{
    ViewData["Title"] = "Add money";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Balance"></label>
                    <input asp-for="Balance" class="form-control" disabled="disabled">
                </div>                
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="BlockedSum"></label>
                    <input asp-for="BlockedSum" class="form-control" disabled="disabled">
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label>Amount available </label>
                    <p class="fs-2 text-success">@(Model.Balance - Model.BlockedSum)</p>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AddedSum"></label>
                <input asp-for="AddedSum" class="form-control" placeholder="AddedSum...">
                <span asp-validation-for="AddedSum" class="small text-danger"></span>
            </div>           
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}