@model OrderDetailsServiceModel

@{
    ViewBag.Title = "Delete order";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="FinancialInstrumentName" class="control-label"></label>
                <input asp-for="FinancialInstrumentName" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="IsBid" class="control-label">Type of order</label>
               @if(Model.IsBid)
                {
                    <p class="form-control">Buy</p>
                }
                else
                {
                    <p class="form-control">Sell</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="UnfulfilledVolume" class="control-label"></label>
                <input asp-for="UnfulfilledVolume" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

